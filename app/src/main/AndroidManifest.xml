<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oo.max.dndexperiencesplitter">

    <application
        android:name=".app.ExpApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".launch.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".menu.activity.MainActivity" />
        <activity android:name=".player.activity.PlayerListActivity" />
        <activity android:name=".category.activity.CategoryListActivity" />
        <activity android:name=".playerpicking.activity.PickPlayersActivity"/>
        <activity android:name=".expsplitting.activity.MaxExpActivity"/>
        <activity android:name=".expsplitting.activity.SurveyActivity"/>

    </application>

</manifest>